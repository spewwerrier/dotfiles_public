#### This all implements my default tmux
keybind = ctrl+shift+n=new_window

keybind = alt+c=new_tab
# keybind = alt+x>n=next_tab
# keybind = alt+x>p=previous_tab
keybind = alt+n=next_tab
keybind = alt+p=previous_tab
keybind = alt+o=last_tab

